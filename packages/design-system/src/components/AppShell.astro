---
import AppBar from "./AppBar.astro";
import AppTray from "./AppTray.astro";
import FontLinks from "./FontLinks.astro";
import "../styles/base.css";

interface NavItem {
  icon: string;
  label: string;
  href: string;
  active?: boolean;
  subItems?: {
    label: string;
    href: string;
    active?: boolean;
  }[];
}

interface Props {
  title: string;
  navItems: NavItem[];
  brandHref?: string;
}

const { title, navItems, brandHref } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <FontLinks />
    <title>{title}</title>
    <slot name="head" />
  </head>
  <body>
    <div class="app-shell">
      <AppTray items={navItems} brandHref={brandHref} />
      <div class="app-shell__body">
        <AppBar title={title} />
        <main class="app-shell__content">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
