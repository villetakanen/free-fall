---
interface Props {
  href: string;
  label: string;
  active?: boolean;
}

// biome-ignore lint/correctness/noUnusedVariables: used in template
const { href, label, active } = Astro.props;
---

<li class="tray-link-item">
  <a
    class="tray-link text-ui-small"
    href={href}
    aria-current={active ? "page" : undefined}
  >
    <span class="tray-link__label">{label}</span>
  </a>
</li>
