---
// biome-ignore lint/correctness/noUnusedImports: used in template
import { colors, spacing } from "@free-fall/design-system";
// biome-ignore lint/correctness/noUnusedImports: used in template
import AppShell from "@free-fall/design-system/components/AppShell.astro";

// biome-ignore lint/correctness/noUnusedVariables: used in template
const primarySteps = [
  50, 100, 200, 300, 400, 500, 600, 700, 800, 900, 950,
] as const;
// biome-ignore lint/correctness/noUnusedVariables: used in template
const accentSteps = [400, 500, 900] as const;

// biome-ignore lint/correctness/noUnusedVariables: used in template
const semanticTokens = [
  { name: "--freefall-bg-canvas", role: "Page background", ref: "primary-950" },
  {
    name: "--freefall-bg-surface-1",
    role: "Card / panel background",
    ref: "primary-900",
  },
  {
    name: "--freefall-bg-surface-2",
    role: "Elevated surface",
    ref: "primary-800",
  },
  {
    name: "--freefall-text-display",
    role: "Headings, hero text",
    ref: "primary-50",
  },
  { name: "--freefall-text-body", role: "Body copy", ref: "primary-100" },
  {
    name: "--freefall-text-muted",
    role: "Secondary / disabled text",
    ref: "primary-300",
  },
  {
    name: "--freefall-border-subtle",
    role: "Dividers, low-contrast",
    ref: "primary-800",
  },
  {
    name: "--freefall-border-strong",
    role: "High-contrast borders",
    ref: "primary-700",
  },
  {
    name: "--freefall-action-base",
    role: "Buttons, links (default)",
    ref: "primary-500",
  },
  {
    name: "--freefall-action-hover",
    role: "Buttons, links (hover)",
    ref: "primary-400",
  },
  {
    name: "--freefall-alert-base",
    role: "Alert text, emphasis",
    ref: "accent-400",
  },
  {
    name: "--freefall-alert-bg",
    role: "Alert panel background",
    ref: "accent-900",
  },
];

// biome-ignore lint/correctness/noUnusedVariables: used in template
const navItems = [
  { icon: "home", label: "Home", href: "/" },
  { icon: "palette", label: "Design Tokens", href: "/tokens/", active: true },
  { icon: "text_fields", label: "Typography", href: "/typography/" },
  { icon: "emoji_symbols", label: "Iconography", href: "/iconography/" },
  { icon: "menu_open", label: "App Tray", href: "/app-tray/" },
  { icon: "menu", label: "Hamburger Button", href: "/hamburger-button/" },
  { icon: "buttons_alt", label: "Tray Button", href: "/tray-button/" },
  { icon: "web_asset", label: "App Bar", href: "/app-bar/" },
];
---

<AppShell title="Tokens — FREE//FALL Design System" navItems={navItems}>
  <Fragment slot="head">
    <style>
      .swatch-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
        gap: 0.75rem;
        margin: 1rem 0 2rem;
      }
      .swatch {
        border: 1px solid var(--freefall-border-subtle);
        border-radius: 4px;
        overflow: hidden;
      }
      .swatch-color {
        height: 64px;
      }
      .swatch-label {
        padding: 0.5rem;
        font-size: 0.75rem;
        font-family: monospace;
      }
      .swatch-label strong {
        display: block;
        margin-bottom: 0.25rem;
      }
      .semantic-list {
        list-style: none;
        padding: 0;
        margin: 1rem 0 2rem;
      }
      .semantic-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.5rem 0;
        border-bottom: 1px solid var(--freefall-border-subtle);
        font-size: 0.875rem;
      }
      .semantic-swatch {
        width: 40px;
        height: 40px;
        border-radius: 4px;
        border: 1px solid var(--freefall-border-subtle);
        flex-shrink: 0;
      }
      .semantic-name {
        font-family: monospace;
        font-size: 0.75rem;
        color: var(--freefall-text-muted);
      }
      .spacing-list {
        list-style: none;
        padding: 0;
        margin: 1rem 0 2rem;
      }
      .spacing-item {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.5rem 0;
        border-bottom: 1px solid var(--freefall-border-subtle);
        font-size: 0.875rem;
      }
      .spacing-bar {
        height: 1rem;
        background: var(--freefall-action-base);
        border-radius: 2px;
        flex-shrink: 0;
      }
      .spacing-label {
        font-family: monospace;
        font-size: 0.75rem;
        color: var(--freefall-text-muted);
        white-space: nowrap;
      }
    </style>
  </Fragment>

  <h1>Design Tokens</h1>

  <h2>Primary Palette — Deep Space Cobalt</h2>
  <div class="swatch-grid">
    {
      primarySteps.map((step) => (
        <div class="swatch">
          <div
            class="swatch-color"
            style={`background: var(--freefall-color-primary-${step})`}
          />
          <div class="swatch-label">
            <strong>{step}</strong>
            {colors.primary[step]}
          </div>
        </div>
      ))
    }
  </div>

  <h2>Accent Palette — Isotope Neon</h2>
  <div class="swatch-grid">
    {
      accentSteps.map((step) => (
        <div class="swatch">
          <div
            class="swatch-color"
            style={`background: var(--freefall-color-accent-${step})`}
          />
          <div class="swatch-label">
            <strong>{step}</strong>
            {colors.accent[step]}
          </div>
        </div>
      ))
    }
  </div>

  <h2>Semantic Tokens</h2>
  <ul class="semantic-list">
    {
      semanticTokens.map((token) => (
        <li class="semantic-item">
          <div
            class="semantic-swatch"
            style={`background: var(${token.name})`}
          />
          <div>
            <div>{token.role}</div>
            <div class="semantic-name">
              {token.name} → {token.ref}
            </div>
          </div>
        </li>
      ))
    }
  </ul>

  <h2>Spacing — 0.5rem base (1rem = 16px)</h2>
  <ul class="spacing-list">
    {
      ([1, 2, 4, 8, 16] as const).map((step) => (
        <li class="spacing-item">
          <div
            class="spacing-bar"
            style={`width: var(--freefall-space-${step})`}
          />
          <div>
            <div>space-{step}</div>
            <div class="spacing-label">
              --freefall-space-{step} → {spacing[step]} ({step * 8}px)
            </div>
          </div>
        </li>
      ))
    }
  </ul>
</AppShell>
