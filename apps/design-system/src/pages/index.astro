---
// biome-ignore lint/correctness/noUnusedImports: used in template
import { breakpoints } from "@free-fall/design-system";
// biome-ignore lint/correctness/noUnusedImports: used in template
import nineTailRaw from "@free-fall/design-system/assets/nine-tail.svg?raw";
// biome-ignore lint/correctness/noUnusedImports: used in template
import AppShell from "@free-fall/design-system/components/AppShell.astro";

// biome-ignore lint/correctness/noUnusedVariables: used in template
const navItems = [
  { icon: "home", label: "Home", href: "/", active: true },
  { icon: "palette", label: "Design Tokens", href: "/tokens/" },
  { icon: "text_fields", label: "Typography", href: "/typography/" },
  { icon: "emoji_symbols", label: "Iconography", href: "/iconography/" },
  { icon: "menu_open", label: "App Tray", href: "/app-tray/" },
  { icon: "menu", label: "Hamburger Button", href: "/hamburger-button/" },
];
---

<AppShell title="FREE//FALL Design System" navItems={navItems}>
  <div class="test-container" style="padding: 2rem;">
    <div
      style="display: flex; justify-content: center;width:96px; opacity:0.44"
      set:html={nineTailRaw}
    />
    <h1 class="text-chapter">FREE//FALL Design System</h1>
    <h2 class="text-section">Component Reference</h2>
  </div>
  <h2>Breakpoints</h2>
  <ul>
    <li>Tablet: {breakpoints.tablet}</li>
    <li>Desktop: {breakpoints.desktop}</li>
  </ul>
  <h2>Pages</h2>
  <ul>
    <li>
      <a href="/tokens/" style="color: var(--freefall-alert-base)"
        >Design Tokens</a
      >
    </li>
    <li>
      <a href="/typography/" style="color: var(--freefall-alert-base)"
        >Typography</a
      >
    </li>
    <li>
      <a href="/iconography/" style="color: var(--freefall-alert-base)"
        >Iconography</a
      >
    </li>
    <li>
      <a href="/app-tray/" style="color: var(--freefall-alert-base)">App Tray</a
      >
    </li>
  </ul>
</AppShell>
