---
// biome-ignore lint/correctness/noUnusedImports: used in template
import AppBar from "@free-fall/design-system/components/AppBar.astro";
// biome-ignore lint/correctness/noUnusedImports: used in template
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="App Bar — FREE//FALL Design System">
  <Fragment slot="head">
    <style>
      .demo-section {
        margin-bottom: calc(4 * var(--freefall-space-1));
      }
      .demo-container {
        border: calc(var(--freefall-space-1) / 4) dashed
          var(--freefall-border-subtle);
        border-radius: calc(var(--freefall-space-1));
        padding: var(--freefall-space-2);
        margin-top: var(--freefall-space-2);
        overflow: hidden;
      }
      .demo-label {
        font-size: calc(1.5 * var(--freefall-space-1));
        font-family: var(--freefall-font-mono);
        color: var(--freefall-text-muted);
        margin-bottom: var(--freefall-space-1);
      }
      .demo-action {
        display: flex;
        align-items: center;
        gap: var(--freefall-space-1);
        padding: var(--freefall-space-1);
        color: var(--freefall-text-body);
        background: none;
        border: calc(var(--freefall-space-1) / 4) solid
          var(--freefall-border-subtle);
        border-radius: var(--freefall-space-1);
        cursor: pointer;
        font-family: inherit;
        font-size: inherit;
      }
    </style>
  </Fragment>

  <h1>App Bar</h1>
  <p>
    M3-style top app bar. Transparent background, 80px left margin to clear the
    navigation rail / hamburger button. Accepts a <code>title</code> prop and a default
    slot for trailing actions pushed to the right.
  </p>

  <div class="demo-section">
    <h2>Title Only</h2>
    <p class="demo-label">No slotted content — title fills the bar.</p>
    <div class="demo-container">
      <AppBar title="Page Title" />
    </div>
  </div>

  <div class="demo-section">
    <h2>With Trailing Actions</h2>
    <p class="demo-label">
      Slotted children align to the right via margin-left: auto.
    </p>
    <div class="demo-container">
      <AppBar title="Dashboard">
        <button class="demo-action">
          <span class="material-symbols-sharp" aria-hidden="true">search</span>
          Search
        </button>
        <button class="demo-action">
          <span class="material-symbols-sharp" aria-hidden="true">settings</span
          >
        </button>
      </AppBar>
    </div>
  </div>

  <div class="demo-section">
    <h2>Multiple Icon Actions</h2>
    <p class="demo-label">Actions spaced with gap: var(--freefall-space-1).</p>
    <div class="demo-container">
      <AppBar title="Character Sheet">
        <span
          class="material-symbols-sharp"
          style="color: var(--freefall-text-body); cursor: pointer;"
          >casino</span
        >
        <span
          class="material-symbols-sharp"
          style="color: var(--freefall-text-body); cursor: pointer;">share</span
        >
        <span
          class="material-symbols-sharp"
          style="color: var(--freefall-text-body); cursor: pointer;"
          >more_vert</span
        >
      </AppBar>
    </div>
  </div>

  <div class="demo-section">
    <h2>Dimensions</h2>
    <table class="demo-label" style="border-collapse: collapse; width: 100%;">
      <tr>
        <td
          style="padding: var(--freefall-space-1) var(--freefall-space-2); border-bottom: calc(var(--freefall-space-1) / 4) solid var(--freefall-border-subtle);"
          >Height</td
        >
        <td
          style="padding: var(--freefall-space-1) var(--freefall-space-2); border-bottom: calc(var(--freefall-space-1) / 4) solid var(--freefall-border-subtle);"
          >calc(8 * var(--freefall-space-1))</td
        >
        <td
          style="padding: var(--freefall-space-1) var(--freefall-space-2); border-bottom: calc(var(--freefall-space-1) / 4) solid var(--freefall-border-subtle);"
          >64px</td
        >
      </tr>
      <tr>
        <td
          style="padding: var(--freefall-space-1) var(--freefall-space-2); border-bottom: calc(var(--freefall-space-1) / 4) solid var(--freefall-border-subtle);"
          >Left margin</td
        >
        <td
          style="padding: var(--freefall-space-1) var(--freefall-space-2); border-bottom: calc(var(--freefall-space-1) / 4) solid var(--freefall-border-subtle);"
          >calc(10 * var(--freefall-space-1))</td
        >
        <td
          style="padding: var(--freefall-space-1) var(--freefall-space-2); border-bottom: calc(var(--freefall-space-1) / 4) solid var(--freefall-border-subtle);"
          >80px</td
        >
      </tr>
      <tr>
        <td style="padding: var(--freefall-space-1) var(--freefall-space-2);"
          >Background</td
        >
        <td style="padding: var(--freefall-space-1) var(--freefall-space-2);"
          >transparent</td
        >
        <td style="padding: var(--freefall-space-1) var(--freefall-space-2);"
          >—</td
        >
      </tr>
    </table>
  </div>
</BaseLayout>
