  <div class="rulebook-container">
    <div class="freefall-prose">
      <Content />
    </div>
  </div>
</BaseLayout>

<style>
  .rulebook-container {
    padding: calc(4 * var(--freefall-space-1)) calc(2 * var(--freefall-space-1));
    max-width: 800px;
    margin: 0 auto;
  }
</style>
