---
import { getCollection, render } from "astro:content";
// biome-ignore lint/correctness/noUnusedImports: used in template
import AppShell from "@free-fall/design-system/components/AppShell.astro";

export async function getStaticPaths() {
  const entries = await getCollection("rules");
  return entries.map((entry) => ({
    params: { slug: entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;
// biome-ignore lint/correctness/noUnusedVariables: used in template
const { Content } = await render(entry);

// biome-ignore lint/correctness/noUnusedVariables: used in template
const navItems = [
  { icon: "home", label: "Home", href: "/" },
  { icon: "menu_book", label: "Rules", href: "/rules/core/", active: true },
];
---

<AppShell title={`${entry.data.title} â€” FREE//FALL`} navItems={navItems}>
  <Content />
</AppShell>
