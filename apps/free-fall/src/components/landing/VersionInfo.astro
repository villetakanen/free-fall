---
import alphaBadgeRaw from "@free-fall/design-system/assets/v7-alpha.svg?raw";
import { version as CORE_VERSION } from "../../../../../content/core-rulebook/package.json";
import { version as APP_VERSION } from "../../../../../package.json";
---

<section class="version-info">
  <div class="alpha-badge" set:html={alphaBadgeRaw} />
  <p class="version-badges">
    Alpha Release: building live.
    <br />
    App: {APP_VERSION}
    <br />
    Rules: {CORE_VERSION}
  </p>
</section>

<style is:global>
  .version-info {
    display: flex;
    flex-direction: row;
    gap: var(--freefall-space-2);
    flex-wrap: nowrap;
    padding-bottom: var(--freefall-space-2);
    border-bottom: 1px solid var(--freefall-border-subtle);
  }
  .alpha-badge {
    display: block;
    width: 96px;
    height: 96px;
    flex-shrink: 0;
  }
  .alpha-badge svg {
    height: 96px;
    width: 96px;
  }
  .version-badges {
    font-family: var(--freefall-font-mono);
    color: var(--freefall-text-muted);
    font-size: 0.75rem;
    letter-spacing: 0.05em;
  }
</style>
