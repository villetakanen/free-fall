{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "svelte",
    "paths": {
      "@free-fall/design-system/*": ["../../packages/design-system/src/*"],
      "@free-fall/design-system": ["../../packages/design-system/src/index.ts"],
      "@free-fall/core-rulebook/*": [
        "../../packages/free-fall-core-rulebook/src/*"
      ],
      "@free-fall/core-rulebook": [
        "../../packages/free-fall-core-rulebook/src/index.ts"
      ]
    }
  },
  "include": ["src/**/*", "astro.config.ts"]
}
